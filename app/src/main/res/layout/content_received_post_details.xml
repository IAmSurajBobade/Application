<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ReceivedPostDetails"
    tools:showIn="@layout/activity_received_post_details"
    android:onClick="sendResponse">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        card_view:cardCornerRadius="5dp"
        android:elevation="15dp"
        android:id="@+id/event_invit">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:id="@+id/liner">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:textAlignment="viewEnd"
                android:gravity="end"
                android:padding="2dp"
                android:text="Category"
                android:hint="Category"
                android:layout_gravity="right"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tEventDesc"
                android:layout_centerHorizontal="true"
                android:weightSum="4">

                <EditText
                    android:layout_width="62dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:text="Frm: "
                    android:ems="10"
                    android:id="@+id/from"
                    android:hint="Frm: "
                    android:background="#e7e3e3"
                    android:layout_weight="0.64" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/sender"
                    android:layout_weight="3"
                    android:hint="Name of Sender (Mobile)" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventName"
                    android:layout_gravity="center_horizontal"
                    android:hint="Event Name"
                    android:gravity="fill_horizontal|center|fill"
                    android:contentDescription="This is Name of Event" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/eventDateTime"
                    android:layout_gravity="center_horizontal"
                    android:hint="Event Time" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Interested?"
                    android:id="@+id/response"
                    android:padding="5dp"
                    android:background="#e7e3e3"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/responseGroup"
                    android:layout_below="@+id/response">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes"
                            android:id="@+id/going"
                            android:checked="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="#e7e3e3" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="May Be"
                            android:id="@+id/maybe"
                            android:checked="false"
                            android:layout_below="@+id/going"
                            android:layout_alignParentLeft="true"
                            android:background="#e7e3e3" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No"
                            android:id="@+id/not"
                            android:checked="false"
                            android:layout_below="@+id/maybe"
                            android:layout_alignParentLeft="true"
                            android:background="#e7e3e3" />

                    </LinearLayout>
                </RadioGroup>

            </LinearLayout>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Respond"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/tEventDesc"
                android:hint="Discription of Event"
                android:layout_below="@+id/button2"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

