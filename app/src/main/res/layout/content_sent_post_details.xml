<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SentPostDetails"
    tools:showIn="@layout/activity_sent_post_details"
    android:background="#f6f1fa">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        card_view:cardCornerRadius="5dp"
        android:elevation="15dp"
        android:id="@+id/event_invit">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:id="@+id/liner">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:textAlignment="viewEnd"
                android:gravity="end"
                android:padding="2dp"
                android:text="Category"
                android:hint="Category"
                android:layout_gravity="right"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eName"
                    android:layout_gravity="center_horizontal"
                    android:hint="Event Name"
                    android:gravity="fill_horizontal|center|fill"
                    android:contentDescription="This is Name of Event" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/eDateTime"
                    android:layout_gravity="center_horizontal"
                    android:hint="Event Time" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Responces: "
                    android:id="@+id/response"
                    android:padding="5dp"
                    android:background="#e7e3e3"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:columnOrderPreserved="true"
                    android:columnCount="3"
                    android:rowCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Coming"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="5"
                        android:layout_gravity="center"
                        android:layout_columnWeight="1"
                        android:id="@+id/going"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="No reply"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:layout_columnWeight="1"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:text="6"
                        android:layout_gravity="center"
                        android:layout_columnWeight="1"
                        android:id="@+id/maybe"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Not Coming"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        android:layout_columnWeight="1"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:text="7"
                        android:layout_gravity="center"
                        android:layout_columnWeight="1"
                        android:id="@+id/not"/>
                </GridLayout>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/textView8"
                android:hint="Discription of Event"
                android:layout_below="@+id/button2"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
